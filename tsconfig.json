{
  "compilerOptions": {
    "target": "ES2020",

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true,
    "strictPropertyInitialization": false,

    "rootDir": "src",
    "outDir": "dist",

    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
